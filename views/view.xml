<?xml version="1.0" encoding="utf-8"?>
<odoo xmlns:minInclusive="http://www.w3.org/2001/XMLSchema">

    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">view.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position='before'>
                <page string="Visits">
                    <field name="visit_ids" mode="kanban" context="{'default_partner_id': id}">
                        <kanban>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_global_click">
                                        <div class="oe_kanban_details">
                                            <field name="week_day"/>
                                            <div>Order: <field name="order"/></div>
                                            <div>Period: <field name="period"/></div>
                                            <div>Next visit day: <field name="next_visit"/></div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                        <form string="Visit">
                            <sheet>
                                <group>
                                    <field name="partner_id" invisible="1"/>
                                    <field name="week_day" string="Day of the week" required="1"/>
                                    <field name="order" string="Order number" required="1"/>
                                    <field name="period" string="Period" required="1"/>
                                    <field name="next_visit" string="Next day of visit" readonly="1" required="1"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>